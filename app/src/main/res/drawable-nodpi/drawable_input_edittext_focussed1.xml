<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
        <shape>
            <solid android:color="#F8F8F8"/>
            <stroke
                    android:width="1dp"
                    android:color="?attr/primaryTextColor"/>

            <corners android:radius="@dimen/fragment_small_margin"/>

            <padding
                android:left="@dimen/fragment_default_margin"
                android:right="@dimen/fragment_default_margin"/>

        </shape>
    </item>

</layer-list>