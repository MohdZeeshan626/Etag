<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:clickable="true">

    <include layout="@layout/toolbar"/>

    <VideoView
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/ivCamera"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>


    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="@dimen/fragment_double_margin"
        android:layout_height="@dimen/fragment_double_margin"
        android:src="@drawable/ic_play_video"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/videoPlayer"
        app:layout_constraintEnd_toEndOf="@id/videoPlayer"
        app:layout_constraintTop_toTopOf="@id/videoPlayer"
        app:layout_constraintBottom_toBottomOf="@id/videoPlayer"/>


    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera_intent"
        app:layout_constraintTop_toTopOf="@+id/ivDone"
        app:layout_constraintBottom_toBottomOf="@+id/ivDone"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintEnd_toStartOf="@+id/ivDone"/>

    <ImageView
        android:id="@+id/ivDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_image"
        app:layout_constraintBottom_toTopOf="@+id/rvVideoView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoPlayer"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_video_detail"
        app:layout_constraintEnd_toEndOf="@id/ivDelete"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/ivDelete"/>

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_preview"
        app:layout_constraintEnd_toEndOf="@id/ivDetail"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/ivDetail"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_medium_margin"
        android:clipToPadding="false"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"/>

</com.max360group.cammax360.views.utils.SlidingConstraintLayout>