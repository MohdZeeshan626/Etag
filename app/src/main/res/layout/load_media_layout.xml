<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/fragment_small_margin"
    app:cardCornerRadius="@dimen/rounded_corner_radius"
    app:layout_constraintEnd_toEndOf="parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvSimpleImage"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@color/colorPlaceHolderImage"
        app:roundedCornerRadius="@dimen/rounded_corner_radius" />

    <ImageView
        android:id="@+id/ivSelection"
        android:layout_width="@dimen/product_image_size"
        android:layout_height="@dimen/product_image_size"
        android:background="@drawable/drawable_stroke_white"
        android:backgroundTint="?attr/primaryTextColor"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_video"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/sdvSimpleImage"
        app:layout_constraintStart_toStartOf="@+id/sdvSimpleImage"
        app:layout_constraintEnd_toEndOf="@+id/sdvSimpleImage"
        app:layout_constraintBottom_toBottomOf="@+id/sdvSimpleImage"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/StyleSemiBold"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:text="Jobname1"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="?attr/primaryTextColor"
        app:layout_constraintStart_toStartOf="@+id/sdvSimpleImage"
        app:layout_constraintTop_toBottomOf="@+id/sdvSimpleImage" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/StyleSemiBold"
        android:layout_marginTop="@dimen/fragment_spacing"
        android:text="Ashley Green"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

</androidx.constraintlayout.widget.ConstraintLayout>