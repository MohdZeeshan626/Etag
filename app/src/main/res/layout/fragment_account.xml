<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include layout="@layout/toolbar"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvUserImage"
        android:layout_width="@dimen/user_image_size"
        android:layout_height="@dimen/user_image_size"
        android:layout_marginTop="@dimen/fragment_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:roundAsCircle="true"
        app:roundingBorderColor="?attr/primaryTextColor"
        app:roundingBorderWidth="@dimen/divider_height"
        app:placeholderImageScaleType="centerCrop"
        app:placeholderImage="@drawable/ic_user_placeholder" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/StyleBold"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:text="Akshay Kuamr"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintEnd_toEndOf="@+id/sdvUserImage"
        app:layout_constraintStart_toStartOf="@+id/sdvUserImage"
        app:layout_constraintTop_toBottomOf="@+id/sdvUserImage" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/StyleRegular"
        android:layout_marginTop="@dimen/fragment_spacing"
        android:text="ak@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintEnd_toEndOf="@+id/sdvUserImage"
        app:layout_constraintStart_toStartOf="@+id/sdvUserImage"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewProfile"
        style="@style/StyleSubmitButton"
        android:layout_height="@dimen/medium_button_height"
        android:layout_marginBottom="@dimen/fragment_default_margin"
        android:text="@string/st_view_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/fragment_default_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:id="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/tvLogout"
        app:layout_constraintEnd_toEndOf="@id/tvLogout"
        android:layout_marginTop="@dimen/fragment_default_margin"
        app:layout_constraintTop_toBottomOf="@+id/btnViewProfile"
        android:background="@color/colorDivider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:id="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/tvLogout"
        app:layout_constraintEnd_toEndOf="@id/tvLogout"
        app:layout_constraintBottom_toTopOf="@+id/tvLogout"
        android:background="@color/colorDivider"
        android:layout_marginBottom="@dimen/fragment_default_margin"/>

    <TextView
       style="@style/StyleRegular"
        android:id="@+id/tvLogout"
        android:layout_width="0dp"
        android:text="@string/logout"
        android:drawableStart="@drawable/ic_logout"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/fragment_default_margin"
        android:drawablePadding="@dimen/fragment_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/btnViewProfile"
        app:layout_constraintEnd_toEndOf="@id/btnViewProfile"/>


</com.max360group.cammax360.views.utils.SlidingConstraintLayout>