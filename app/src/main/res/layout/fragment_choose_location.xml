<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="false">

    <com.google.android.gms.maps.MapView
        android:id="@+id/fgGoogleMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.gms.maps.MapView>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:alpha=".1"/>

    <EditText
        android:id="@+id/etSearchLocation"
        style="@style/StyleInputEditText"
        android:layout_width="0dp"
        android:backgroundTint="@color/white"
        android:hint="Search property"
        android:drawablePadding="@dimen/drawable_padding"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:drawableEnd="@drawable/ic_target"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/home_card_elevation"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <ProgressBar
        android:id="@+id/pbBar"
        android:layout_width="@dimen/fragment_vertical_margin"
        android:layout_height="@dimen/fragment_vertical_margin"
        app:layout_constraintEnd_toEndOf="@+id/etSearchLocation"
        app:layout_constraintTop_toTopOf="@+id/etSearchLocation"
        android:visibility="gone"
        android:elevation="@dimen/home_card_elevation"
        android:background="@drawable/drawable_small_rounded_corners_solid"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchLocation"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLocationList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/etSearchLocation"
        app:layout_constraintEnd_toEndOf="@+id/etSearchLocation"
        app:layout_constraintTop_toBottomOf="@+id/etSearchLocation"
        android:translationY="-20dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        tools:itemCount="100"
        app:layout_constraintHeight_max="388dp"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:elevation="@dimen/home_card_elevation"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/drawable_input_edittext_normal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tvLocationName"
        style="@style/StyleRegular"
        app:layout_constraintBottom_toTopOf="@+id/imgLocationPinUp"
        android:layout_width="0dp"
        android:text="your location"
        app:layout_constraintWidth_default="wrap"
        android:maxLines="2"
        android:layout_marginHorizontal="@dimen/fragment_double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/fragment_small_margin"
        android:background="@drawable/drawable_color_white_rounded_corners_solid"
        android:paddingVertical="@dimen/fragment_small_margin"
        android:paddingHorizontal="@dimen/fragment_small_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>


    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imgLocationPinUp"
        android:src="@drawable/ic_pin_location"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChooseLocation"
        style="@style/StyleSubmitButton"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/st_confirm_location"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <include layout="@layout/toolbar"/>

</com.max360group.cammax360.views.utils.SlidingConstraintLayout>