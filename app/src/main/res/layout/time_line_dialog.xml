<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="@dimen/fragment_small_margin"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_color_white_rounded_corners_solid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivHeaderView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:background="@color/colorBackgroundBg"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                style="@style/StyleSemiBold"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="@string/st_time_line_filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorHeaderTitle"
                app:layout_constraintBottom_toBottomOf="@+id/ivCancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivCancel" />

            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_cancel_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/ivHeaderView"
                app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/tvRecoverPassword"
                        style="@style/StyleSemiBold"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="start"
                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                        android:text="@string/st_date_range"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <TextView
                        android:id="@+id/etDateRange"
                        style="@style/StyleInputEditTextLight"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:hint="@string/st_date_range"
                        android:inputType="textEmailAddress"
                        android:textColorHighlight="@color/colorDisabledText"
                        app:layout_constraintEnd_toEndOf="@id/tvRecoverPassword"
                        app:layout_constraintStart_toStartOf="@id/tvRecoverPassword"
                        app:layout_constraintTop_toBottomOf="@id/tvRecoverPassword" />

                    <TextView
                        android:id="@+id/tvItems"
                        style="@style/StyleSemiBold"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="start"
                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                        android:text="@string/st_items"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etDateRange" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="@+id/tvItems"
                        app:layout_constraintStart_toStartOf="@+id/tvItems"
                        app:layout_constraintTop_toBottomOf="@+id/tvItems"
                        app:spanCount="2" />

                    <TextView
                        android:id="@+id/tvUserUpdate"
                        style="@style/StyleSemiBold"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="start"
                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                        android:text="@string/st_user_update"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvItems" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUserUpdates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="@+id/tvItems"
                        app:layout_constraintStart_toStartOf="@+id/tvItems"
                        app:layout_constraintTop_toBottomOf="@+id/tvUserUpdate"
                        app:spanCount="2" />

                    <TextView
                        android:id="@+id/tvUsers"
                        style="@style/StyleSemiBold"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="start"
                        android:lineSpacingExtra="@dimen/line_spacing_extra"
                        android:text="@string/st_users"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvUserUpdates" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUsers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="@+id/tvItems"
                        app:layout_constraintStart_toStartOf="@+id/tvItems"
                        app:layout_constraintTop_toBottomOf="@+id/tvUsers"
                        app:spanCount="2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                style="@style/StyleSubmitButton"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/fragment_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/st_save_changes"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
