<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true">

    <include layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/StyleSemiBold"
                android:layout_width="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="@string/st_document_visibility"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/colorHeaderTitle"
                app:layout_constraintBottom_toBottomOf="@+id/btnSave"
                app:layout_constraintEnd_toStartOf="@+id/btnSave"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnSave" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                style="@style/StyleSubmitButton"
                android:layout_height="@dimen/default_button_height_medium"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/st_save_changes"
                android:src="@drawable/ic_search_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvPhoto"
                android:layout_width="@dimen/product_image_size"
                android:layout_height="@dimen/product_image_size"
                app:placeholderImage="@drawable/ic_document"
                app:roundedCornerRadius="@dimen/rounded_corner_radius"
                app:roundingBorderWidth="@dimen/divider_height_medium"
                app:roundingBorderColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:layout_constraintTop_toBottomOf="@+id/btnSave"
                app:layout_constraintStart_toStartOf="@+id/tvTitle"/>

            <ImageView
                android:id="@+id/ivPlayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_video"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/sdvPhoto"
                app:layout_constraintEnd_toEndOf="@+id/sdvPhoto"
                app:layout_constraintTop_toTopOf="@+id/sdvPhoto"
                app:layout_constraintBottom_toBottomOf="@+id/sdvPhoto"/>

            <TextView
                style="@style/StyleSemiBold"
                android:id="@+id/tvName"
                android:text="Jobname1"
                app:layout_constraintTop_toBottomOf="@+id/sdvPhoto"
                app:layout_constraintStart_toStartOf="@+id/sdvPhoto"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/fragment_small_margin"/>

            <TextView
                style="@style/StyleSemiBold"
                android:id="@+id/tvUserName"
                android:text="Ashley Green"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorDisabledText"
                android:layout_marginTop="@dimen/fragment_spacing"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvJobsList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/fragment_default_margin"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"/>


            <TextView
                android:id="@+id/tvNoData"
                style="@style/StyleTextViewNoData"
                android:visibility="gone"
                android:text="st_no_members"
                app:layout_constraintBottom_toBottomOf="@+id/rvJobsList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rvJobsList" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</com.max360group.cammax360.views.utils.SlidingConstraintLayout>