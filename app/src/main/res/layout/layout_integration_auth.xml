<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:elevation="@dimen/home_card_elevation"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.max360group.cammax360.views.utils.CheckableLinearLayout
        android:id="@+id/cbSync"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@drawable/drawable_check_box_selector"
        android:paddingVertical="@dimen/fragment_small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAll"
            android:layout_width="@dimen/ic_verctor_image_size"
            android:layout_height="@dimen/ic_verctor_image_size"
            android:duplicateParentState="true"
            android:src="@drawable/drawable_check_box_selector" />


        <TextView
            android:id="@+id/tvAll"
            style="@style/StyleSemiBold"
            android:layout_marginStart="@dimen/fragment_medium_margin"
            android:layout_marginTop="@dimen/viewpager_indicator_radius"
            android:text="Sync with RM"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toBottomOf="@+id/cbSync"
            app:layout_constraintTop_toTopOf="@+id/cbSync" />


    </com.max360group.cammax360.views.utils.CheckableLinearLayout>


    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvDisplayName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/st_display_name"
        app:layout_constraintTop_toBottomOf="@+id/cbSync"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

    <EditText
        android:id="@+id/etMessage"
        style="@style/StyleInputEditTextLight"
        android:layout_height="@dimen/default_button_height"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColorHint="@color/colorDisabledText"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>