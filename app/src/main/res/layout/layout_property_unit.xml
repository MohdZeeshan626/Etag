<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:elevation="@dimen/home_card_elevation"
    android:layout_marginVertical="@dimen/fragment_small_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvUnitImage"
        android:layout_width="@dimen/user_image_size_nav_header"
        android:layout_height="@dimen/user_image_size_nav_header"
        app:roundAsCircle="true"
        app:placeholderImage="@drawable/ic_unit_place_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvUnitName"
        android:layout_width="0dp"
        android:text="Unit Name"
        android:textColor="@color/colorHeaderTitle"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/sdvUnitImage"
        app:layout_constraintTop_toTopOf="@+id/sdvUnitImage"
        android:layout_marginTop="@dimen/line_spacing_extra"
        app:layout_constraintEnd_toStartOf="@+id/ivEdit"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvUnitAddress"
        android:layout_width="0dp"
        android:text="1 Matheson Street, Times, Causeway Bay, Hong Kong"
        android:textColor="@color/colorDisabledText"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="@+id/tvUnitName"
        app:layout_constraintTop_toBottomOf="@+id/tvUnitName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivEdit"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_new"
        android:layout_marginEnd="@dimen/fragment_spacing"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>