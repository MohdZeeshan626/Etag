<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/default_button_height"
        android:layout_height="@dimen/ic_verctor_image_size"
        app:placeholderImage="@drawable/ic_mimi_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"
        app:riv_corner_radius="@dimen/rounded_corner_radius"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvName"
        android:text="Organisation Name"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"/>

</androidx.constraintlayout.widget.ConstraintLayout>