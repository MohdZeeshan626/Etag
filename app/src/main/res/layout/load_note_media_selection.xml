<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/line_spacing_extra">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvMediaImage"
        android:layout_width="@dimen/fragment_double_margin"
        android:layout_height="@dimen/fragment_double_margin"
        app:roundedCornerRadius="@dimen/rounded_corner_radius"
        app:placeholderImage="@color/colorPlaceHolderImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:placeholderImageScaleType="centerCrop"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivCancelImage"
        android:layout_width="@dimen/fragment_default_margin"
        android:layout_height="@dimen/fragment_default_margin"
        android:background="@drawable/drawable_small_rounded_corners_solid"
        android:backgroundTint="@color/black"
        android:padding="@dimen/fragment_spacing"
        app:roundedCornerRadius="@dimen/rounded_corner_radius"
        android:elevation="@dimen/home_card_elevation"
        app:placeholderImage="@drawable/ic_cross_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>