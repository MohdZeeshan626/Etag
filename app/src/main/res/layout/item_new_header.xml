<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_top_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height_medium"
        android:background="@color/colorDividerDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvName"
        android:text="@string/st_current_members"
        android:textColor="@color/colorHeaderTitle"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="@dimen/fragment_vertical_margin"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/st_delete"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"/>

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/divider_height_medium"
        android:layout_height="0dp"
        android:background="@color/colorDividerDark"
        app:layout_constraintEnd_toStartOf="@+id/tvDelete"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ivPermissions"
        style="@style/StyleSemiBold"
        android:layout_width="@dimen/fragment_double_margin"
        android:text="@string/st_permissions"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"/>

    <View
        android:id="@+id/view3"
        android:layout_width="@dimen/divider_height_medium"
        android:layout_height="0dp"
        android:background="@color/colorDividerDark"
        app:layout_constraintEnd_toStartOf="@+id/ivPermissions"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>