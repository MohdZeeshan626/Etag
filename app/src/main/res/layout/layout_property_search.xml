<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvPropertyImage"
        android:layout_width="@dimen/damage_image_width_offset"
        android:layout_height="@dimen/damage_image_width_offset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_round_property"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="@dimen/rounded_corner_radius" />

    <TextView
        style="@style/StyleBold"
        android:id="@+id/tvPropertyName"
        android:layout_width="0dp"
        android:text="Property Name"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/sdvPropertyImage"
        app:layout_constraintTop_toTopOf="@+id/sdvPropertyImage"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:text="1 Matheson Street, Times, Causeway Bay, Hong Kong"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="@+id/tvPropertyName"
        app:layout_constraintTop_toBottomOf="@+id/tvPropertyName"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUnitView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/sdvPropertyImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress"
        android:background="@drawable/drawable_small_rounded_corners_solid"
        android:backgroundTint="?attr/primaryTransparent"
        android:paddingHorizontal="@dimen/fragment_medium_margin"
        android:paddingVertical="@dimen/fragment_small_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/StyleMedium"
            android:id="@+id/tvUnitName"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/st_units_obtained"
            android:textColor="@color/black"/>

        <TextView
            style="@style/StyleMedium"
            android:id="@+id/tvUnitAddress"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUnitName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/line_spacing_extra"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="@string/st_units_obtained"
            android:textColor="@color/colorDisabledText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        app:layout_constraintTop_toBottomOf="@+id/clUnitView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorDivider"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>