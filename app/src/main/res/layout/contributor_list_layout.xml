<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginHorizontal="@dimen/fragment_default_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvImageUser"
        android:layout_width="@dimen/header_top_margin"
        android:layout_height="@dimen/header_top_margin"
        app:roundAsCircle="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        style="@style/StyleSemiBold"
        android:layout_width="0dp"
        android:text="Christan Gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintStart_toEndOf="@+id/sdvImageUser"
        app:layout_constraintEnd_toStartOf="@+id/tvCount"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:text="ak@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintEnd_toStartOf="@+id/tvCount"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvCount"
       style="@style/StyleMedium"
        android:text="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        android:background="@drawable/drawable_color_accent_rounded_corners_solid"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:paddingVertical="@dimen/fragment_medium_margin"
        android:paddingHorizontal="@dimen/fragment_medium_margin"
        app:layout_constraintBottom_toBottomOf="@+id/tvEmail"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>