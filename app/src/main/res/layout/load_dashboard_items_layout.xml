<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    android:id="@+id/clRootView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginHorizontal="@dimen/fragment_small_margin"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/damage_image_width_offset"
        android:layout_height="@dimen/damage_image_width_offset"
        android:background="@drawable/image_round_bg"
        app:actualImageScaleType="centerInside"
        android:scaleType="centerInside"
        android:tint="?attr/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:text="Dashboard"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintStart_toEndOf="@+id/ivIcon"
        app:layout_constraintTop_toTopOf="@+id/ivIcon" />

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvValue"
        android:text="3"
        android:gravity="center_vertical"
        android:textColor="?attr/primaryTextColor"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="@+id/tvName"
       app:layout_constraintTop_toBottomOf="@+id/tvName" />

</androidx.constraintlayout.widget.ConstraintLayout>