<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"

        app:theme="@style/DarkSearchViewTheme">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivToolbarLeftIcon"
            android:layout_width="44dp"
            android:layout_height="@dimen/fragment_vertical_margin"
            android:src="@drawable/ic_mimi_logo"
            app:riv_corner_radius="@dimen/rounded_corner_radius"
            app:roundAsCircle="true"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            style="@style/StyleToolbarTitle" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivToolbarUserImage"
            android:layout_width="@dimen/ic_verctor_image_size"
            android:layout_height="@dimen/ic_verctor_image_size"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/fragment_default_margin"
            app:roundingBorderColor="?attr/primaryTextColor"
            app:roundingBorderWidth="@dimen/divider_height"
            app:placeholderImage="@drawable/ic_user_placeholder"
            app:roundAsCircle="true"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivToolbarRightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/fragment_small_margin"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_calender"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivToolbarRightIconBell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/fragment_small_margin"
            android:layout_marginEnd="@dimen/line_spacing_extra"
            android:src="@drawable/ic_bell"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivToolbarSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/line_spacing_extra"
            android:padding="@dimen/line_spacing_extra"
            android:src="@drawable/ic_baseline_search_24"
            android:visibility="gone" />

    </androidx.appcompat.widget.Toolbar>
</merge>
