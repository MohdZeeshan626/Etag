<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include layout="@layout/toolbar" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="0dp"
            android:theme="@style/DarkSearchViewTheme"
            android:visibility="visible">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/colorTransparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvCreateOwner"
                        style="@style/StyleSemiBold"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:text="@string/st_create_owner"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:textColor="@color/colorHeaderTitle"
                        app:layout_constraintBottom_toBottomOf="@+id/btnSave"
                        app:layout_constraintEnd_toStartOf="@+id/btnSave"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/btnSave" />

                    <ImageView
                        android:id="@+id/btnSave"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@drawable/drawable_small_rounded_corners_solid"
                        android:backgroundTint="?attr/primaryTextColor"
                        android:padding="@dimen/fragment_spacing"
                        android:src="@drawable/ic_more"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnUpdate"
                        style="@style/StyleSubmitButton"
                        android:layout_height="@dimen/medium_button_height"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@drawable/drawable_small_rounded_corners_solid"
                        android:backgroundTint="?attr/primaryTextColor"
                        android:text="@string/update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdvUserImage"
                        android:layout_width="@dimen/profile_image_size"
                        android:layout_height="@dimen/profile_image_size"
                        app:roundAsCircle="true"
                        app:placeholderImage="@color/colorPlaceHolderImage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnSave"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>

                    <ImageView
                        android:id="@+id/ivCameraPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/fragment_vertical_margin"
                        android:src="@drawable/ic_camera_picker"
                        app:layout_constraintBottom_toBottomOf="@+id/sdvUserImage"
                        app:layout_constraintEnd_toEndOf="@+id/sdvUserImage"
                        app:layout_constraintStart_toEndOf="@+id/sdvUserImage" />


                    <TextView
                        android:id="@+id/tvUserName"
                        style="@style/StyleSemiBold"
                        android:layout_marginTop="@dimen/header_top_margin"
                        android:text="@string/st_first_name_require"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="@+id/tvCreateOwner"
                        app:layout_constraintTop_toBottomOf="@+id/sdvUserImage" />

                    <EditText
                        android:id="@+id/etFirstName"
                        style="@style/StyleInputEditTextLight"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/line_spacing_extra"
                        android:layout_marginEnd="@dimen/line_spacing_extra"
                        android:hint="@string/hint_first_name"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toStartOf="@+id/etLastName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

                    <TextView
                        android:id="@+id/tvLastName"
                        style="@style/StyleSemiBold"
                        android:text="@string/st_last_name_require"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
                        app:layout_constraintStart_toStartOf="@+id/etLastName"
                        app:layout_constraintTop_toTopOf="@+id/tvUserName" />

                    <EditText
                        android:id="@+id/etLastName"
                        style="@style/StyleInputEditTextLight"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/line_spacing_extra"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:hint="@string/hint_last_name"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/etFirstName"
                        app:layout_constraintTop_toTopOf="@+id/etFirstName" />

                    <TextView
                        android:id="@+id/tvEmail"
                        style="@style/StyleSemiBold"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/st_email_require"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="@+id/etFirstName"
                        app:layout_constraintTop_toBottomOf="@+id/etFirstName" />

                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/StyleInputEditTextLight"
                        android:layout_marginTop="@dimen/line_spacing_extra"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="@+id/etLastName"
                        app:layout_constraintStart_toStartOf="@+id/etFirstName"
                        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

                    <TextView
                        android:id="@+id/tvTaxId"
                        style="@style/StyleSemiBold"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/st_tax_id"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="@+id/etFirstName"
                        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

                    <EditText
                        android:id="@+id/etTaxId"
                        style="@style/StyleInputEditTextLight"
                        android:layout_marginTop="@dimen/line_spacing_extra"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="@+id/etLastName"
                        app:layout_constraintStart_toStartOf="@+id/etFirstName"
                        app:layout_constraintTop_toBottomOf="@+id/tvTaxId" />

                    <TextView
                        android:id="@+id/tvComment"
                        style="@style/StyleSemiBold"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/st_comments"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="@+id/etFirstName"
                        app:layout_constraintTop_toBottomOf="@+id/etTaxId" />

                    <EditText
                        android:id="@+id/etComment"
                        style="@style/StyleInputEditTextLight"
                        android:layout_marginTop="@dimen/line_spacing_extra"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/etLastName"
                        app:layout_constraintStart_toStartOf="@+id/tvComment"
                        app:layout_constraintTop_toBottomOf="@+id/tvComment" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMenuAdapter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.max360group.cammax360.views.utils.NonSwipeableViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/fragment_medium_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvMenuAdapter" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.max360group.cammax360.views.utils.SlidingConstraintLayout>