<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/fragment_small_margin"
    android:layout_marginVertical="@dimen/fragment_small_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvProductImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_image_size"
        android:visibility="visible"
        app:viewAspectRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@color/grey"
        app:roundedCornerRadius="@dimen/rounded_corner_radius" />


    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rippleStrokeWidth"
        android:padding="@dimen/line_spacing_extra"
        android:src="@drawable/ic_share_media"
        app:layout_constraintEnd_toEndOf="@+id/sdvProductImage"
        app:layout_constraintTop_toTopOf="@+id/sdvProductImage" />


    <ImageView
        android:id="@+id/ivSimpleVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/line_spacing_extra"
        android:src="@drawable/ic_view_eye"
        app:layout_constraintEnd_toEndOf="@+id/ivShare"
        app:layout_constraintTop_toBottomOf="@+id/ivShare" />


    <TextView
        android:id="@+id/tvSimpleImageName"
        style="@style/StyleSemiBold"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:text="James Deniel"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/sdvProductImage" />

    <TextView
        android:id="@+id/tvSimpleUseName"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:text="May 23rd,2021"
        android:textColor="@color/colorDisabledText"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tvSimpleImageName"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSimpleImageName" />


</androidx.constraintlayout.widget.ConstraintLayout>