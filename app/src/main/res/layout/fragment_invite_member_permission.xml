<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/fragment_small_margin"
        app:layout_constraintBottom_toTopOf="@id/btnSaveAsNewRole"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/StyleSemiBold"
                android:layout_width="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="@string/st_invite_member"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/colorHeaderTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etMemberName"
                style="@style/StyleInputEditTextLight"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/fragment_default_margin"
                android:hint="@string/st_member_name"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <EditText
                android:id="@+id/etMemberEmail"
                style="@style/StyleInputEditTextLight"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/fragment_default_margin"
                android:hint="@string/st_member_email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etMemberName" />

            <Spinner
                android:id="@+id/spnrRoles"
                style="@style/StyleInputEditTextLight"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/drawable_spinner"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:drawablePadding="@dimen/fragment_medium_margin"
                android:paddingHorizontal="@dimen/fragment_medium_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toEndOf="@+id/etMemberName"
                app:layout_constraintStart_toStartOf="@+id/etMemberName"
                app:layout_constraintTop_toBottomOf="@+id/etMemberEmail" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_small_margin"
                android:layout_marginBottom="@dimen/fragment_small_margin"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/fragment_vertical_margin"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spnrRoles" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveAsNewRole"
        style="@style/StyleSubmitButton"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/fragment_small_margin"
        android:layout_marginBottom="@dimen/fragment_default_margin"
        android:text="@string/st_save_as_new_role"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveChanges"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveChanges"
        style="@style/StyleSubmitButton"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/fragment_small_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/st_save_changes"
        app:layout_constraintBottom_toBottomOf="@+id/btnSaveAsNewRole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSaveAsNewRole"
        app:layout_constraintTop_toTopOf="@+id/btnSaveAsNewRole" />


</com.max360group.cammax360.views.utils.SlidingConstraintLayout>