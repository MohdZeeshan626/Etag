<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="@dimen/fragment_medium_margin">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorDivider"/>

    <com.max360group.cammax360.views.utils.CheckableLinearLayout
        android:id="@+id/cbUnitSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@drawable/drawable_check_box_selector"
        android:padding="@dimen/fragment_spacing"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:id="@+id/ivAll"
            android:layout_width="@dimen/ic_verctor_image_size"
            android:layout_height="@dimen/ic_verctor_image_size"
            android:duplicateParentState="true"
            android:src="@drawable/drawable_check_box_selector" />

    </com.max360group.cammax360.views.utils.CheckableLinearLayout>

    <TextView
        style="@style/StyleBold"
        android:id="@+id/tvJobName"
        android:layout_width="0dp"
        android:text="Property Name"
        android:textColor="@color/colorHeaderTitle"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/cbUnitSelect"
        app:layout_constraintTop_toTopOf="@+id/cbUnitSelect"
        app:layout_constraintBottom_toBottomOf="@+id/cbUnitSelect"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:layout_marginStart="@dimen/fragment_small_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:text="1 Matheson Street, Times, Causeway Bay, Hong Kong"
        android:textColor="@color/colorDisabledText"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="@+id/cbUnitSelect"
        app:layout_constraintTop_toBottomOf="@+id/cbUnitSelect"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

</androidx.constraintlayout.widget.ConstraintLayout>