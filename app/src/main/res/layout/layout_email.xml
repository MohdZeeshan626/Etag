<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fragment_default_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:backgroundTint="?attr/primaryTransparent">

    <TextView
        android:id="@+id/tvType"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/st_type_level"
        android:textColor="@color/colorHeaderTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

    <EditText
        android:id="@+id/etType"
        style="@style/StyleInputEditText"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        app:layout_constraintStart_toStartOf="@+id/tvType"
        app:layout_constraintTop_toBottomOf="@+id/tvType" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/fragment_vertical_margin"
        android:layout_height="@dimen/fragment_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etType"
        app:layout_constraintBottom_toBottomOf="@+id/etType"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        android:src="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/tvEmail"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etType"
        android:text="@string/st_email_require"
        android:textColor="@color/colorHeaderTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <EditText
        android:id="@+id/etEmail"
        style="@style/StyleInputEditText"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/etType"
        app:layout_constraintStart_toStartOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>