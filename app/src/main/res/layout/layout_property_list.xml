<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:elevation="@dimen/new_offer_stroke_width"
    android:layout_marginVertical="@dimen/fragment_small_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvPropertyImage"
        android:layout_width="@dimen/damage_image_width_offset"
        android:layout_height="@dimen/damage_image_width_offset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_round_property"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="@dimen/rounded_corner_radius" />

    <TextView
        style="@style/StyleBold"
        android:id="@+id/tvPropertyName"
        android:layout_width="0dp"
        android:text="Property Name"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintEnd_toStartOf="@id/ivDelete"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/sdvPropertyImage"
        app:layout_constraintTop_toTopOf="@+id/sdvPropertyImage"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:text="1 Matheson Street, Times, Causeway Bay, Hong Kong"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="@+id/tvPropertyName"
        app:layout_constraintTop_toBottomOf="@+id/tvPropertyName"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/fragment_vertical_margin"
        android:layout_height="@dimen/fragment_vertical_margin"
        android:gravity="center"
        android:padding="@dimen/line_spacing_extra"
        android:src="@drawable/ic_delete"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPropertyName"
        app:layout_constraintBottom_toBottomOf="@+id/tvPropertyName"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height_medium"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvUnitObtainedLevel"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/btnAdd"
        app:layout_constraintBottom_toBottomOf="@+id/btnAdd"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="@string/st_units_obtained"
        android:textColor="@color/colorDisabledText"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvUnitObtained"
        app:layout_constraintStart_toEndOf="@+id/tvUnitObtainedLevel"
        android:layout_marginStart="@dimen/line_spacing_extra"
        app:layout_constraintTop_toTopOf="@+id/tvUnitObtainedLevel"
        app:layout_constraintBottom_toBottomOf="@+id/tvUnitObtainedLevel"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text=" : 0"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/btnAdd"
        style="@style/StyleBold"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ic_verctor_image_size"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:background="@drawable/drawable_small_rounded_corners_solid"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/st_add"
        android:paddingVertical="0dp"
        android:paddingHorizontal="@dimen/fragment_medium_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/ivOpenUnit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_collapse_action"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintTop_toTopOf="@+id/btnAdd"
        app:layout_constraintBottom_toBottomOf="@+id/btnAdd"
        android:layout_marginEnd="@dimen/fragment_medium_margin"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/ivOpenUnit"/>

</androidx.constraintlayout.widget.ConstraintLayout>