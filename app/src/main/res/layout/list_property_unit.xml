<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fragment_default_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:backgroundTint="?attr/primaryTransparent">

    <TextView
        android:id="@+id/tvName"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/st_unit_name"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

    <EditText
        android:id="@+id/etName"
        style="@style/StyleInputEditText"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvType"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        android:text="@string/st_type_level"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <Spinner
        android:id="@+id/etType"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_edittext_height"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:background="@drawable/drawable_spinner_white"
        app:layout_constraintEnd_toEndOf="@+id/etBathroom"
        app:layout_constraintStart_toStartOf="@+id/tvType"
        app:layout_constraintTop_toBottomOf="@+id/tvType" />

    <TextView
        android:id="@+id/tvBathroom"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/etType"
        android:text="@string/st_unit_name"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

    <EditText
        android:id="@+id/etBathroom"
        style="@style/StyleInputEditText"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        app:layout_constraintStart_toStartOf="@+id/tvBathroom"
        app:layout_constraintTop_toBottomOf="@+id/tvBathroom" />

    <TextView
        android:id="@+id/tvBedroom"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBathroom"
        android:text="@string/st_unit_name"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

    <EditText
        android:id="@+id/etBedroom"
        style="@style/StyleInputEditText"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        app:layout_constraintStart_toStartOf="@+id/tvBathroom"
        app:layout_constraintTop_toBottomOf="@+id/tvBedroom" />

    <TextView
        android:id="@+id/tvTotalSqft"
        style="@style/StyleSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBedroom"
        android:text="@string/st_unit_name"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

    <EditText
        android:id="@+id/etTotalSqFt"
        style="@style/StyleInputEditText"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        app:layout_constraintStart_toStartOf="@+id/tvBathroom"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalSqft" />

</androidx.constraintlayout.widget.ConstraintLayout>