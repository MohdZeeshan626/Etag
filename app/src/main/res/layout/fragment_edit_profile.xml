<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="true">

    <include layout="@layout/toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvUserImage"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                app:roundAsCircle="true"
                app:placeholderImage="@color/colorPlaceHolderImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <ImageView
                android:id="@+id/ivCameraPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/fragment_vertical_margin"
                android:src="@drawable/ic_camera_picker"
                app:layout_constraintBottom_toBottomOf="@+id/sdvUserImage"
                app:layout_constraintEnd_toEndOf="@+id/sdvUserImage"
                app:layout_constraintStart_toEndOf="@+id/sdvUserImage" />

            <TextView
                android:id="@+id/tvName"
                style="@style/StyleSemiBold"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                tools:text="John Denial"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sdvUserImage" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/StyleRegular"
                android:layout_marginTop="@dimen/fragment_spacing"
                tools:text="jogndenial@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />


            <EditText
                android:id="@+id/etFirstName"
                style="@style/StyleInputEditTextLight"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/line_spacing_extra"
                android:hint="@string/hint_first_name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/etLastName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

            <EditText
                android:id="@+id/etLastName"
                style="@style/StyleInputEditTextLight"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/line_spacing_extra"
                android:hint="@string/hint_last_name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintStart_toEndOf="@+id/etFirstName"
                app:layout_constraintTop_toTopOf="@+id/etFirstName" />


            <EditText
                android:id="@+id/etEmail"
                style="@style/StyleInputEditTextLight"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="@string/label_email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/etLastName"
                app:layout_constraintStart_toStartOf="@+id/etFirstName"
                app:layout_constraintTop_toBottomOf="@+id/etLastName" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveChanges"
                style="@style/StyleSubmitButton"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="@string/st_save_changes"
                app:layout_constraintEnd_toEndOf="@+id/etEmail"
                app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                app:layout_constraintTop_toBottomOf="@+id/btnSaveChanges"
                app:layout_constraintStart_toStartOf="@+id/btnSaveChanges"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:layout_constraintEnd_toEndOf="@+id/btnSaveChanges"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</com.max360group.cammax360.views.utils.SlidingConstraintLayout>