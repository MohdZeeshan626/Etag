<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvName"
        android:text="Documents"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/line_spacing_extra"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        android:layout_marginStart="@dimen/fragment_small_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="?attr/primaryTextColor"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        android:layout_marginTop="@dimen/fragment_spacing"
        app:layout_constraintTop_toBottomOf="@id/tvName"/>

</androidx.constraintlayout.widget.ConstraintLayout>