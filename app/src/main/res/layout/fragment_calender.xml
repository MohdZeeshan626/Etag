<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include layout="@layout/toolbar" />

    <com.github.tibolte.agendacalendarview.AgendaCalendarView
        android:id="@+id/agenda_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:agendaCurrentDayTextColor="@color/theme_primary"
        app:calendarColor="?attr/primaryTransparent"
        app:calendarCurrentDayTextColor="@color/colorBlack"
        app:calendarDayTextColor="@color/colorGoogleButton"
        app:calendarHeaderColor="?attr/primaryTextColor"
        app:calendarPastDayTextColor="@color/colorInputEditTextHint"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabColor="?attr/primaryTextColor" />

    <ProgressBar
        android:id="@+id/pbBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:elevation="@dimen/home_card_elevation"
        android:background="@drawable/drawable_color_white_rounded_corners_solid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</com.max360group.cammax360.views.utils.SlidingConstraintLayout>