<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvTag"
        android:text="Tag"
        android:textColorHint="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:paddingHorizontal="@dimen/fragment_default_margin"
        android:paddingVertical="@dimen/fragment_small_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/fragment_spacing"
        android:background="@drawable/drawable_small_rounded_corners_solid"
        android:backgroundTint="@color/colorTags"/>

</androidx.constraintlayout.widget.ConstraintLayout>