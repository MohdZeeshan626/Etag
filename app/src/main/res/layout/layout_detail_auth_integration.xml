<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:elevation="@dimen/home_card_elevation"
    android:padding="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/tvIntegrationName"
        style="@style/StyleSemiBold"
        android:text="Rent Manager"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDisplayName"
        style="@style/StyleSemiBold"
        android:layout_marginTop="@dimen/fragment_default_margin"
        android:text="@string/st_display_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvIntegrationName"
        app:layout_constraintTop_toBottomOf="@+id/tvIntegrationName" />

    <TextView
        android:id="@+id/rmDisplayName"
        style="@style/StyleInputEditTextLight"
        android:layout_height="@dimen/default_button_height"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColorHint="@color/colorDisabledText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayName" />

</androidx.constraintlayout.widget.ConstraintLayout>