<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/drawable_color_white_rounded_corners_solid"
    android:elevation="@dimen/home_card_elevation"
    android:layout_marginVertical="@dimen/fragment_small_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvUserImage"
        android:layout_width="@dimen/user_image_size_chat"
        app:roundAsCircle="true"
        android:layout_height="@dimen/user_image_size_chat"
        app:placeholderImage="@drawable/ic_user_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/StyleSemiBold"
        android:id="@+id/tvJobName"
        android:layout_width="0dp"
        android:text="Property Name"
        android:textColor="@color/colorHeaderTitle"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/sdvUserImage"
        app:layout_constraintTop_toTopOf="@+id/sdvUserImage"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:text="rohan@gmail.com"
        android:textColor="@color/colorDisabledText"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="@+id/tvJobName"
        app:layout_constraintTop_toBottomOf="@+id/tvJobName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</androidx.constraintlayout.widget.ConstraintLayout>