<?xml version="1.0" encoding="utf-8"?>
<com.max360group.cammax360.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:clickable="true">

    <include layout="@layout/toolbar"/>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/rvDocsView"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <ImageView
        android:id="@+id/ivUploadFile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_upload"
        app:layout_constraintTop_toTopOf="@+id/ivDone"
        app:layout_constraintBottom_toBottomOf="@+id/ivDone"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:id="@+id/ivCancelDocs"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="@+id/ivDone"
        app:layout_constraintBottom_toBottomOf="@+id/ivDone"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintEnd_toStartOf="@+id/ivDone"/>

    <ImageView
        android:id="@+id/ivDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_image"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/webView"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_video_detail"
        app:layout_constraintEnd_toEndOf="@id/ivDelete"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/ivDelete"/>

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_preview"
        app:layout_constraintEnd_toEndOf="@id/ivDetail"
        android:layout_marginTop="@dimen/fragment_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/ivDetail"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDocsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_medium_margin"
        android:clipToPadding="false"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ivDone"/>

</com.max360group.cammax360.views.utils.SlidingConstraintLayout>