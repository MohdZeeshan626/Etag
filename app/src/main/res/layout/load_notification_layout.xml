<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clRootView"
    android:layout_marginTop="@dimen/fragment_default_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvNotificationImage"
        android:layout_width="@dimen/damage_image_width_offset"
        android:layout_height="@dimen/damage_image_width_offset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundingBorderColor="?attr/primaryTextColor"
        app:roundingBorderWidth="@dimen/divider_height"
        app:placeholderImage="@drawable/ic_user_placeholder"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true" />

    <ImageView
        android:id="@+id/ivNotificationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification_comments"
        app:layout_constraintBottom_toBottomOf="@+id/sdvNotificationImage"
        app:layout_constraintEnd_toEndOf="@+id/sdvNotificationImage"/>

    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:text="Mukesh Rana has commented on your photo."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorHeaderTitle"
        app:layout_constraintStart_toEndOf="@+id/sdvNotificationImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sdvNotificationImage" />

    <TextView
        android:id="@+id/tvNotificationTime"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:text="June 18, 2021  6:00 PM"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvNotificationTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReject"
        style="@style/StyleSubmitButton"
        android:layout_height="42dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationTime"
        app:layout_constraintStart_toStartOf="@+id/tvNotificationTime"
        app:layout_constraintEnd_toStartOf="@+id/btnAccept"
        android:text="@string/st_reject"
        android:visibility="gone"
        android:textColor="?attr/primaryTextColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="@dimen/fragment_small_margin"
        android:layout_marginEnd="@dimen/fragment_small_margin"
        android:background="@drawable/drawable_stroke_white"
        android:backgroundTint="?attr/primaryTextColor"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAccept"
        style="@style/StyleSubmitButton"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@+id/btnReject"
        app:layout_constraintBottom_toBottomOf="@+id/btnReject"
        app:layout_constraintStart_toEndOf="@+id/btnReject"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/st_accept"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="@dimen/fragment_small_margin"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height_medium"
        app:layout_constraintTop_toBottomOf="@+id/btnReject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorDivider"
        android:layout_marginTop="@dimen/fragment_default_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>